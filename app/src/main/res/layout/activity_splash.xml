<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/layout_loading_overlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="end">

                <TextView
                    android:id="@+id/text_view_switch_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:background="@drawable/shape_button_round_corner_red_bg_white"
                    android:textColor="@color/kf_red"
                    android:textSize="18sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_kf_logo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_logo_kf_red_big"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/text_view_kf_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kf_care"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/text_view_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginTop="6dp" />


            <Button
                android:id="@+id/btn_facebook_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="สมัครด้วย Facebook"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/linear_layout_email_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">

                <TextView
                    android:id="@+id/text_view_email_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_title_email"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_text_email_input_splash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button_round_corner_red_bg_white"
                    android:textColor="@color/black"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="20sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_password_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_password_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_login_password"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button_round_corner_red_bg_white">

                    <EditText
                        android:id="@+id/edit_text_password_input_splash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="20sp"
                        android:layout_marginTop="6dp"
                        android:background="@android:color/transparent"
                        android:layout_toLeftOf="@+id/text_view_goto_forget_password_splash"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/text_view_goto_forget_password_splash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forget_password"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/grey"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_is_accepted_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:visibility="visible"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="40dp">

                <Button
                    android:id="@+id/btn_email_login_splash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/email_login_button_login"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:background="@drawable/shape_button_round_corner_red_bg_red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_login_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp">

                <Button
                    android:id="@+id/btn_register_splash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button_round_corner_red_bg_white"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/login_register"
                    android:textColor="@color/kf_red"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>