<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_margin="18dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_view"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    fresco:placeholderImage="@drawable/ic_user_red"
                    fresco:roundAsCircle="true"
                    fresco:roundingBorderColor="@color/kf_red"
                    fresco:roundingBorderWidth="4dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/nav_header_welcome_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_drawer_welcome"
                        android:textColor="@color/kf_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nav_header_user_first_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/kf_red"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nav_header_user_room_no_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:drawableEnd="@drawable/ic_arrow_down_bg_red"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_button_round_corner_red_bg_red"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/Separator.DarkGrey"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/linear_layout_hot_menu_content_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="8dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/relative_layout_hot_menu_parcels"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_view_menu_parcels"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_parcel_bg_orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_drawer_parcels"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relative_layout_hot_menu_announcements"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_view_menu_announcements"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_annouce_bg_red" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_drawer_announcements"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relative_layout_hot_menu_billings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/image_view_menu_billings"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_bill_bg_violet" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_drawer_billings"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_hot_menu_content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/relative_layout_hot_menu_job_request"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_view_menu_job_request"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_maintain_bg_blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_drawer_job_request"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relative_layout_hot_menu_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal|top"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/image_view_menu_contact"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_mail_bg_green" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_drawer_contact"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">

                </RelativeLayout>

            </LinearLayout>

            <View
                style="@style/Separator.DarkGrey"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/linear_layout_menu_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_drawer_dashboard"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_menu_work_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_maintain_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_drawer_work_order"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_menu_create_job_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_maintain_add_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_drawer_create_job_request"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_menu_create_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_message_add_green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_drawer_create_message"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_menu_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_profile_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_drawer_profile"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

            <View
                style="@style/Separator.DarkGrey"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/linear_layout_menu_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_setting_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_drawer_settings"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_menu_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_power_settings_new_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_drawer_logout"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logo_kf" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_drawer_kf_care"
                        android:textColor="@color/kf_red"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="16dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>