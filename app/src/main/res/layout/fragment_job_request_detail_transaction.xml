                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/text_view_transaction_status_3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/job_request_detail_transaction_status_job_done_title"
                        android:textColor="@color/grey"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/linear_layout_transaction_status_3_desc_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/text_view_transaction_status_3_desc"
